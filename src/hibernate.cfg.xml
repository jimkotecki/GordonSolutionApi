<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">developer66</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/GordonSolution</property>
        <property name="hibernate.connection.username">developer</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</property>
        <property name="hibernate.default_schema">public</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <mapping class="com.sgg.hibernate.LinkInfo" />
        <mapping class="com.sgg.hibernate.Account" />
        <mapping class="com.sgg.hibernate.User" />
        <mapping class="com.sgg.hibernate.ContactInfo" />
        <mapping class="com.sgg.hibernate.Convo" />
        <mapping class="com.sgg.hibernate.Ranking" />
        <mapping class="com.sgg.hibernate.Message" />
    </session-factory>
</hibernate-configuration>
